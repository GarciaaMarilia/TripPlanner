generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Trip {
  id           String        @id @default(uuid())
  id_user      String
  destination  String
  starts_at    DateTime
  ends_at      DateTime?
  is_confirmed Boolean       @default(false)
  created_at   DateTime      @default(now())
  activities   Activity[]
  links        Link[]
  participants Participant[]
  user         User          @relation(fields: [id_user], references: [id])

  @@map("trips")
}

model Participant {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)
  trip_id      String
  trip         Trip    @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

model Activity {
  id        String   @id @default(uuid())
  title     String
  occurs_at DateTime
  trip_id   String
  trip      Trip     @relation(fields: [trip_id], references: [id])

  @@map("activities")
}

model Link {
  id      String @id @default(uuid())
  title   String
  url     String
  trip_id String
  trip    Trip   @relation(fields: [trip_id], references: [id])

  @@map("links")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  trips    Trip[]

  @@map("users")
}
